<!-- views/applications/show.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/show.css" />
    <title><%= itemSchema.name %></title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <div class="show-body">
    <div class="show-header">
      <h1><%= itemSchema.name %> at <%= itemSchema.price %></h1>
      <div class="show-sidebar">
        <div class="show-actions">
          
    <h1><%= itemSchema.description %> at <%= itemSchema.price %></h1>
    <% if (item.notes) { %>
    <p>Notes: <%= item.notes %></p>
    <% } %> <% if (item.postingLink) { %>
    <a href="<%= item.postingLink %>">Anything else? </a>
    <% } %>
     <p>The status of this item is: <%= item.sold %></p>
      <a href="/users/<%= user._id %>/items/<%= items_id>/edit">
      Edit this item
    </a>
     <form
      action="/users/<%= user._id %>/items/<%= items_id %>?_method=DELETE"
      method="POST"
    >
      <button type="submit">Delete this item</button>
    </form>
  </div>
        <p>Current Status: <%=item.status %></p>
      </div>
    </div>
    <div class="show-notes-container">
      <% if (item.postingLink) { %>
      <a href="<%= item.postingLink %>" target="_blank"
        >View job posting</a
      >
      <% } %> <% if (item.notes) { %>
      <div class="show-notes">
        <h2>Notes:</h2>
        <p><%= items.notes %></p>
      </div>
      <% } %>
    </div>
  </div>
</html>
</body>
